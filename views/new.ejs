<%layout("./layouts/boilerplate")-%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<h1 class="text-center">Adding a New List</h1>
    <form class="offset-3 col-7 mt-3" method="post" action="/listings/new" enctype="multipart/form-data">
        <div>
            <label for="Name" class="form-label">Name</label>
            <input id="Name" type="text" placeholder="Enter Name" name="items[Name]" class="form-control"/>
        </div>
        <div>
            <label class="form label" for="Image">Image</label>
            <input id="Image" type="file" placeholder="Url" name="items[image]" class="form-control"/>
        </div>
        <div>
            <label for="category" class="form-label">Category</label>
            <select name="items[category]" id="category" class="form-control">
                <option value="Ingredients">Ingredients</option>
                <option value="cleaning">cleaning</option>
                <option value="snacks">snacks</option>
                <option value="Beauty">Beauty</option>
            </select>
        </div>

       
        <div>
            <label for="measurement" class="form-label">Measured In</label>
            <select name="items[measurement]" id="measurement" class="form-control">
                <option value="kg">kg</option>
                <option value="packet">packet</option>
                <option value="bottle">bottle</option>
                <option value="bundle">bundle</option>
            </select>
        </div>

        <button class="mt-3 buttons" >Add</button>
    </form>
